process.errorStrategy = 'ignore'

// Set resource limits for low-memory systems
process {
    // Default resource limits
    cpus = 1
    memory = '2 GB'
    time = '1 h'

    // Override specific processes that typically need more memory
    withName: '.*GUNZIP.*' {
        memory = '1 GB'
    }

    withName: '.*STAR.*' {
        memory = '2 GB'
    }

    withName: '.*HISAT2.*' {
        memory = '2 GB'
    }

    withName: '.*SALMON.*' {
        memory = '2 GB'
    }
}
