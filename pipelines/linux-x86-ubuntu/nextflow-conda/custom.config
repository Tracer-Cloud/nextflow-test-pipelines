process.errorStrategy = 'ignore'

// Set resource limits for low-memory systems
process {
    // Default resource limits
    cpus = 1
    memory = '2 GB'
    time = '1 h'

    // Override specific processes that typically need more memory
    withName: '.*GUNZIP.*' {
        memory = '1 GB'
    }

    withName: '.*CAT_FASTQ.*' {
        memory = '1 GB'
    }

    withName: '.*STAR.*' {
        memory = '2 GB'
    }

    withName: '.*HISAT2.*' {
        memory = '2 GB'
    }

    withName: '.*SALMON.*' {
        memory = '2 GB'
    }

    // Catch-all for any process that might still request too much memory
    withLabel: 'process_single' {
        memory = '1 GB'
    }

    withLabel: 'process_low' {
        memory = '2 GB'
    }

    withLabel: 'process_medium' {
        memory = '3 GB'
    }

    withLabel: 'process_high' {
        memory = '3 GB'
    }
}
