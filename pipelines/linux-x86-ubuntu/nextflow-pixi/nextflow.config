nextflow.enable.dsl = 2

params {
    outdir = "results"
}

process {
    executor = 'local'
    cpus = 1
    memory = '800 MB'
    time = '5 min'

    // Simple error handling - continue on failure
    errorStrategy = 'ignore'

    // All processes use 800MB memory (reduced from 1GB for low-memory systems)
    withName: 'fastqc_version|star_version|samtools_version|bwa_version|gatk_version|save_results' {
        cpus = 1
        memory = '800 MB'
        time = '2 min'
    }
}
