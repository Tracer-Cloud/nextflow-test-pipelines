nextflow.enable.dsl = 2

conda {
    enabled = true
}

params {
    input = "test_data/*.fasta"
    outdir = "results"
}

process {
    executor = 'local'
    cpus = 2
    memory = '4 GB'

    withLabel: conda {
        conda = 'bioconda::fastqc=0.11.9'
    }

    withName: fastqc_process {
        conda = 'bioconda::fastqc=0.11.9'
    }
}
