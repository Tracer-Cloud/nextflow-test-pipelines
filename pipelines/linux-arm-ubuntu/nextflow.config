process {
    executor = 'local'
    cpus = 2
}

params {
    input = '/home/ubuntu/data/*.fastq.gz'           // 🔁 Replace with your input FASTQ files
    outdir = '/home/ubuntu/results'                  // 🔁 Replace with your output path
    genome_dir = '/home/ubuntu/genome/STAR_index'    // 🔁 Replace with your STAR genome index
}
