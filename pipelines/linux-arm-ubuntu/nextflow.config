nextflow.enable.dsl = 2

params {
    input  = "test_data/*.fasta"
    outdir = "pipelines/linux-arm-ubuntu/results"
}

process {
    withName: fastqc_process {
        cpus = 1
        memory = '1 GB'
        time = '1h'
        conda = './environment.yml'
    }

    withName: get_versions_process {
        cpus = 1
        memory = '512 MB'
        time = '10m'
        conda = './environment.yml'
    }
}
