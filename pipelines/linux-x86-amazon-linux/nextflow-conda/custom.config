process.errorStrategy = 'ignore'

// Configure Nextflow to use less disk space
workDir = './work'
tmpDir = './tmp'

// Clean up intermediate files
cleanup = true

// Skip processes that require tools not available in this environment
process {
    withName: '.*BBMAP.*' {
        errorStrategy = 'ignore'
    }

    withName: '.*FQ_LINT.*' {
        errorStrategy = 'ignore'
    }
}

// Set resource limits for low-memory, low-CPU systems
process {
    // Default resource limits - max 2 CPUs available
    cpus = 1
    time = '1 h'

    // Override specific processes that typically need more resources
    withName: '.*GUNZIP.*' {
        cpus = 1
    }

    withName: '.*CAT_FASTQ.*' {
        cpus = 1
    }

    withName: '.*STAR.*' {
        cpus = 2
    }

    withName: '.*HISAT2.*' {
        cpus = 2
    }

    withName: '.*SALMON.*' {
        cpus = 2
    }

    // Catch-all for any process that might still request too many resources
    withLabel: 'process_single' {
        cpus = 1
    }

    withLabel: 'process_low' {
        cpus = 1
    }

    withLabel: 'process_medium' {
        cpus = 2
    }

    withLabel: 'process_high' {
        cpus = 2
    }
} 